<%= form_for(@user_profile, url: user_profile_path(@user), method: :put) do |f| %>
  <%= f.label :profile, 'プロフィール文' %><br/>
  <%= f.text_area :profile, cols: 40, rows: 10 %><br/>

  <%= f.label :birthday, '誕生日' %><br/>
  <%= f.date_field :birthday %><br/>

  性別<br/>
  <label><%= f.radio_button :gender, 0, class: :rd %>男性</label>
  <label><%= f.radio_button :gender, 1, class: :rd %>女性</label><br/>

  <%= f.submit '編集を登録' %>
<% end %>
