<div class="login-form-wrapper">
  <h2 class="login-title">店舗会員ログイン</h2>

  <div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <!-- <%= f.label :email, 'メールアドレス' %><br /> -->
        <%= f.email_field :email, autofocus: true, class: "login-form", placeholder: "メールアドレス" %>
      </div>

      <div class="field">
        <!-- <%= f.label :password, 'パスワード' %><br /> -->
        <%= f.password_field :password, autocomplete: "off", class: "login-form", placeholder: "パスワード" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'ログイン情報を記憶する', class: "login-remember-label" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン", class: "login-form-btn" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
</div>
</div>
