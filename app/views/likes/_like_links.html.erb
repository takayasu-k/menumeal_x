<% if current_user.likes.find_by(review_id: review_id) %>
  <%= button_to like_path(id: review_id), method: :delete, class: "like-button-#{review_id}", remote: true do %>
    <i class="fa fa-heart"></i>
  <% end %>
<% else %>
  <%= button_to likes_path, class: "like-button", params: {review_id: review_id} , remote: true do %>
    <i class="fa fa-heart-o"></i>
  <% end %>
<% end %>
